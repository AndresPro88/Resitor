{% extends 'base.html.twig' %}

{% block title %}Residencia Log in!{% endblock %}

{% block body %}
    <body class="contenedor_login | mt-5">
        <div class="container | mt-4 ">
            <div class="row justify-content-center | mt-4">
                <div class="col-4 | mt-4 | bg-white | rounded | p-4">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                Estas logeado como el usuario: {{ app.user.username }}, <a href="{{ path('app_logout') }}">Cerrar Sesión</a>
                            </div>
                        {% endif %}
                        <h1 class="h3 | mb-3 | font-weight-normal | text-center ">Login de usuario</h1>
                        <label for="inputUsername">Nombre de usuario</label>
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                        <label for="inputPassword">Contraseña</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Recordarme
                            </label>
                        </div>
                        <button class="btn btn-lg btn-primary | mt-3 " type="submit">Logearse</button>
                    </form>
                </div>
            </div>
        </div>
    </body>
{% endblock %}
