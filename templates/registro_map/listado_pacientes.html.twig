{% extends 'base.html.twig' %}

{% block title %}Hello RegistroMapController!{% endblock %}

{% block body %}
    {{ parent() }}
<div class="col-10 mt-4">
    <h3>Listado de Pacientes de: {{ medico.nombre }}</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre del Residente</th>
            </tr>
        </thead>
        <tbody>
            {% for paciente in pacientes %}
                <tr>
                    <td>{{ paciente.nombre }} {{ paciente.primerApellido }}</td>
                    <td><button class="btn btn-primary" onclick="window.location.href='{{ path('ver_residente',{id:paciente.id}) }}'">Ver residente </button></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}